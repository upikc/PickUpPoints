<Window x:Class="StorageApp.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StorageApp"
        mc:Ignorable="d"
        Title="Вход" Height="450" Width="400"
        >
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Label Content="Введите логин" FontSize="30"/>
            <TextBox x:Name="LoginTbox" FontSize="30" Margin="5"/>

            <Label Content="Введите пароль" FontSize="30"/>
            <TextBox x:Name="PassTbox" FontSize="30" Margin="5"/>
            
            <Button Content="Войти" FontSize="30" Margin="5" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
