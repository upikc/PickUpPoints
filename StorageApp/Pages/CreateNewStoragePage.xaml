<Page x:Class="StorageApp.Pages.CreateNewStoragePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StorageApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateNewStoragePage">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.4 *"/>
            <RowDefinition/>
            <RowDefinition Height="0.4 *"/>
        </Grid.RowDefinitions>
        <Label Content="Введите Адрес :" FontSize="30" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="adressTbox" FontSize="30" Grid.Row="0"  Grid.Column="2" Margin="20"/>

        <Button Grid.Row="2"  Grid.ColumnSpan="2" Margin="90 , 20 , 90 , 20" Content="Подтвердить" FontSize="25" Click="AddBtnClick"/>

    </Grid>
</Page>
