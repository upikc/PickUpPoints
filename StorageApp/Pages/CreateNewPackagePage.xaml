<Page x:Class="StorageApp.Pages.CreateNewPackagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StorageApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateNewPackagePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Введите вес" FontSize="30" Grid.Row="0" Grid.Column="0"/>
        <TextBox x:Name="weightTbox" FontSize="30" Grid.Row="0"  Grid.Column="2" Margin="5"/>

        <Label Content="Введите Фио Клиента" FontSize="30" Grid.Row="1" Grid.Column="0"/>
        <TextBox x:Name="fullNameTbox" FontSize="30" Grid.Row="1"  Grid.Column="2" Margin="5"/>

        <Label Content="Введите эл.адрес клиента" FontSize="30" Grid.Row="2" Grid.Column="0"/>
        <TextBox x:Name="mailTbox" FontSize="30" Grid.Row="2"  Grid.Column="2" Margin="5"/>

        <Label Content="Введите номер тел. клиента" FontSize="30" Grid.Row="3" Grid.Column="0"/>
        <TextBox x:Name="numbTbox" FontSize="30" Grid.Row="3"  Grid.Column="2" Margin="5"/>

        


        <Button Grid.Row="7"  Grid.ColumnSpan="2" Margin="90 , 2 , 90 , 2" Content="Потвердить" FontSize="25" Click="AddBtnClick"/>


    </Grid>
</Page>
