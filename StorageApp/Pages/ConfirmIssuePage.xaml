<Page x:Class="StorageApp.Pages.ConfirmIssuePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StorageApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConfirmIssuePage">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.4 *"/>
            <RowDefinition Height="0.4 *"/>
            <RowDefinition Height="0.5 *"/>
            <RowDefinition Height="0.4 *"/>
        </Grid.RowDefinitions>
        <Label Content="Выберите посылку :" FontSize="30" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ComboBox x:Name="Pkg_Id" FontSize="25" Grid.Row="0"  Grid.Column="2" Margin="20"/>

        <Label Content="Введите код :" FontSize="30" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="CodeTTbox" FontSize="25" Grid.Row="1"  Grid.Column="2" Margin="20" />

        <Button Grid.Row="3"  Grid.ColumnSpan="2" Margin="90 , 20 , 90 , 20" Content="Потвердить" FontSize="25" Click="ConfirmPkg"/>

    </Grid>
</Page>
